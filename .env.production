# 生产环境配置文件
# 注意: 此文件包含示例配置，实际部署时请使用真实值

# 环境标识 - Vite 不支持在 .env 文件中设置 NODE_ENV=production
# NODE_ENV 由构建工具自动管理
VITE_APP_ENV=production

# 网络配置
VITE_CHAIN_ID=88813
VITE_CHAIN_NAME="MC Chain"
VITE_RPC_URL="https://rpc.mcchain.io"

# 合约地址 (部署后更新)
VITE_JBC_CONTRACT_ADDRESS=""
VITE_PROTOCOL_CONTRACT_ADDRESS=""
VITE_MC_CONTRACT_ADDRESS=""

# API 配置
VITE_API_BASE_URL="https://jinbao-protocol-prod.pages.dev"

# 功能开关
VITE_ENABLE_DAILY_BURN=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true

# 燃烧配置
VITE_DAILY_BURN_AMOUNT=500
VITE_MAX_BURN_AMOUNT=5000
VITE_BURN_PERCENTAGE=0.1

# 🔥 生产环境质押配置 (重要修改)
VITE_STAKING_UNIT_SECONDS=86400          # 1天 = 86400秒 (生产环境)
VITE_STAKING_PERIODS="7,15,30"           # 支持的质押天数
VITE_STAKING_RATES="1.33,1.67,2.00"     # 对应的日收益率(%)
VITE_TIME_UNIT="days"                    # 时间单位显示
VITE_RATE_UNIT="daily"                   # 收益率单位显示

# 质押周期配置
VITE_STAKE_7_DAYS_RATE=1.3333334         # 7天质押日收益率 1.33%
VITE_STAKE_15_DAYS_RATE=1.6666667        # 15天质押日收益率 1.67%
VITE_STAKE_30_DAYS_RATE=2.0000000        # 30天质押日收益率 2.00%

# 前端配置
VITE_APP_NAME="Jinbao Protocol"
VITE_APP_VERSION="1.0.0"
VITE_SUPPORT_EMAIL="support@jinbao.io"

# 监控和分析
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# 安全配置
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_ONLY=true

# 注意: 敏感信息不应放在此文件中
# 使用 Cloudflare Pages 的 Environment Variables 或 Secrets 管理:
# - PRIVATE_KEY
# - RPC_URL  
# - TELEGRAM_BOT_TOKEN
# - TELEGRAM_CHAT_ID
# - CLOUDFLARE_API_TOKEN
# - CLOUDFLARE_ACCOUNT_ID